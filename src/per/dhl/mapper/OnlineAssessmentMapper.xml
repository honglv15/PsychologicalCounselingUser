<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="per.dhl.mapper.OnlineAssessmentMapper">
    <insert id="SubmitReport">
        insert into report_info (user_id, report_score,
                                 report_ctime)
        values (#{userId,jdbcType=INTEGER}, #{score,jdbcType=INTEGER},
                now())
    </insert>
    <select id="GetAssessmentQuestions" resultType="per.dhl.qo.OnlineAssessmentQo">
        SELECT *
        FROM topic_info a
        where a.field_id = #{selectValue}
    </select>
    <select id="getOptionInfos" resultType="per.dhl.pojo.OptionInfo">
        SELECT *
        FROM option_info
        WHERE topic_id = #{topicId}
    </select>
</mapper>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">


<configuration>
    <properties resource="dbconfig.properties"></properties>
    <settings>
        <setting name="logImpl" value="LOG4J"/>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>
    <typeAliases>
        <package name="per.dhl.pojo"/>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driverPath}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${user}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="per/dhl/mapper/UserInfoMapper.xml"></mapper>
        <mapper resource="per/dhl/mapper/MenuInfoMapper.xml"></mapper>
        <mapper resource="per/dhl/mapper/AppointmentListMapper.xml"></mapper>
        <mapper resource="per/dhl/mapper/OrderConsultInfoMapper.xml"></mapper>
        <mapper resource="per/dhl/mapper/OnlineAssessmentMapper.xml"></mapper>
    </mappers>
</configuration>